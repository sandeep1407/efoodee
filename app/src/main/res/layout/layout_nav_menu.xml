<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_height="match_parent">
    <!--  <include layout="@layout/nav_header_dummy_navigation">

      </include>-->

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">


        <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
                      android:layout_height="match_parent">
            <!-- About Myma-->
            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Myma"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/val_24dp"
                    android:layout_marginStart="@dimen/val_24dp"
                    android:gravity="left|center"
                    android:textAllCaps="false"
                    android:textSize="@dimen/val_textView_16sp"
                    android:id="@+id/btn_about_myma"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/text_color"
            />
            <View android:layout_width="match_parent" android:layout_height="@dimen/val_1dp"
                  android:background="@color/light_grey"
                  android:layout_marginLeft="@dimen/val_24dp"
                  android:layout_marginStart="@dimen/val_24dp">
            </View>

            <!--How To Videos-->

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How to videos"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/val_24dp"
                    android:layout_marginStart="@dimen/val_24dp"
                    android:gravity="left|center"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/val_textView_16sp"
                    android:id="@+id/btn_how_to_vedios"
                    android:textColor="@color/text_color"
            />
            <View android:layout_width="match_parent" android:layout_height="@dimen/val_1dp"
                  android:background="@color/light_grey"
                  android:layout_marginLeft="@dimen/val_24dp"
                  android:layout_marginStart="@dimen/val_24dp">
            </View>

            <!--Language-->


            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/val_24dp"
                    android:layout_marginStart="@dimen/val_24dp"
                    android:gravity="left|center"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/val_textView_16sp"
                    android:id="@+id/btn_language"
                    android:textColor="@color/text_color"
            />
            <View android:layout_width="match_parent" android:layout_height="@dimen/val_1dp"
                  android:background="@color/light_grey"
                  android:layout_marginLeft="@dimen/val_24dp"
                  android:layout_marginStart="@dimen/val_24dp">
            </View>
            <!--Suggestions To Myma-->

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suggestions To Myma"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/val_24dp"
                    android:layout_marginStart="@dimen/val_24dp"
                    android:gravity="left|center"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/val_textView_16sp"
                    android:id="@+id/btn_suggestions_to_myma"
                    android:textColor="@color/text_color"
            />
            <View android:layout_width="match_parent" android:layout_height="@dimen/val_1dp"
                  android:background="@color/light_grey"
                  android:layout_marginLeft="@dimen/val_24dp"
                  android:layout_marginStart="@dimen/val_24dp">
            </View>
            <!--T & C-->

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terms and Conditions"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/val_24dp"
                    android:layout_marginStart="@dimen/val_24dp"
                    android:gravity="left|center"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/val_textView_16sp"
                    android:id="@+id/btn_TandC"
                    android:textColor="@color/text_color"
            />
            <View android:layout_width="match_parent" android:layout_height="@dimen/val_1dp"
                  android:background="@color/light_grey"
                  android:layout_marginLeft="@dimen/val_24dp"
                  android:layout_marginStart="@dimen/val_24dp">
            </View>

            <!--Contact Myma-->

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Myma"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/val_24dp"
                    android:layout_marginStart="@dimen/val_24dp"
                    android:gravity="left|center"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/val_textView_16sp"
                    android:id="@+id/btn_contact_myma"
                    android:textColor="@color/text_color"
            />
            <View android:layout_width="match_parent" android:layout_height="@dimen/val_1dp"
                  android:background="@color/light_grey"
                  android:layout_marginLeft="@dimen/val_24dp"
                  android:layout_marginStart="@dimen/val_24dp">
            </View>

            <!--Logout-->


            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/val_24dp"
                    android:layout_marginStart="@dimen/val_24dp"
                    android:gravity="left|center"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/val_textView_16sp"
                    android:id="@+id/btn_logout"
                    android:textColor="@color/text_color"
            />
            <View android:layout_width="match_parent" android:layout_height="@dimen/val_1dp"
                  android:background="@color/light_grey"
                  android:layout_marginLeft="@dimen/val_24dp"
                  android:layout_marginStart="@dimen/val_24dp">
            </View>

            <ImageView android:layout_width="60dp" android:layout_height="60dp"
                       android:id="@+id/image"
                       android:layout_gravity="right|bottom"
                       android:layout_margin="@dimen/val_16dp"
                       android:src="@drawable/myma_logo"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>