<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:fillViewport="true"
            android:scrollbars="none"
            android:layout_margin="16dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/suggestions"
                android:textColor="@color/colorOrange"
                android:layout_marginTop="@dimen/val_8dp"
                android:textSize="30sp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="We are family, we will take your suggestions seriously."
                android:textColor="@color/colorOrange"
                android:textSize="16sp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/dummy_myma"
                android:padding="@dimen/val_16dp"
                android:inputType="textMultiLine"
                android:background="@drawable/bg_edittext"
                android:textColor="@color/colorBrown"
                android:imeOptions="actionDone"
                android:textSize="14sp"/>

        <Button
                android:id="@+id/btnSuggestionSubmit"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="50dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_round_fill_orange"
                android:text="@string/submit"
                android:textAllCaps="false"
        />
    </LinearLayout>
</ScrollView>