<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rlOrder"
            android:layout_marginBottom="55dp"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_pager"/>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/rlOrder"
            android:layout_height="280dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true">

        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/colorOrange"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Enjoy Your Meal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/val_textView_30sp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="Lorem Ipsum is simply dummy"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/val_textView_20sp"/>
        </LinearLayout>

        <Button
                android:id="@+id/btnGetStarted"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_white_bg"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/get_started"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_margin="25dp"
                android:textColor="@color/colorOrange"/>
    </RelativeLayout>


</RelativeLayout>