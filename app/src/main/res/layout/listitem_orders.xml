<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/val_4dp"
                    android:id="@+id/txt_user_name"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Test Singh"
                    android:textSize="@dimen/val_textView_14sp"/>

            <TextView
                    android:id="@+id/txt_service_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pick up"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/colorOrange"
                    android:gravity="center"
                    android:textSize="12sp"/>

            <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/val_4dp"
                    android:gravity="right"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Rs.1500"
                    android:textSize="14sp"/>

        </LinearLayout>

        <TextView
                android:id="@+id/txt_dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="1/02/1582 3.12 pm"
                android:layout_marginTop="10dp"
                android:padding="@dimen/val_4dp"
                android:layout_marginBottom="@dimen/val_6dp"
                android:textSize="@dimen/val_textView_12sp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_margin="@dimen/val_4dp"
                      android:visibility="gone"
                      android:id="@+id/llExpand">
            <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent" android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/txt_bill"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Total Bill : Rs.55/-"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:textSize="@dimen/val_textView_12sp"/>

                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:text="Call Customer"
                          android:layout_weight="1"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:id="@+id/txtCallCustomer"
                          android:textSize="@dimen/val_textView_12sp"
                          android:drawableTop="@drawable/ic_call_black_24dp"
                />
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:text="Direction"
                          android:layout_weight="1"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textSize="@dimen/val_textView_12sp"
                          android:id="@+id/txtDirections"
                          android:drawableTop="@drawable/ic_location_on_black_24dp"
                />
            </LinearLayout>
            <TextView
                    android:id="@+id/txt_menu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/val_4dp"
                    android:layout_marginBottom="@dimen/val_4dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Flower Bhaji and Chapati"
                    android:textColor="@color/black"
                    android:textSize="@dimen/val_textView_16sp"/>

            <TextView
                    android:id="@+id/txt_extra_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Extra"
                    android:textSize="@dimen/val_textView_12sp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/rr_lisitem_extra"
                        android:layout_width="0dp"
                        tools:listitem="@layout/listitem_checkbox"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

                <TextView
                        android:id="@+id/txt_order_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:gravity="right"
                        android:layout_margin="@dimen/val_6dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Order No:123456"
                        android:textSize="@dimen/val_textView_12sp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="@dimen/val_6dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content">

                <Button
                        android:id="@+id/btnMealReady"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/val_4dp"
                        android:text="Meal Ready"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_round_fill_green"
                        android:layout_height="wrap_content">

                </Button>

                <Button
                        android:id="@+id/btnStartDelivery"
                        android:layout_width="0dp"
                        android:layout_margin="@dimen/val_4dp"
                        android:layout_weight="1"
                        android:text="Start Delivery"
                        android:textColor="@color/text_color"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_round_border_orange"
                        android:layout_height="wrap_content">

                </Button>
            </LinearLayout>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="0.5dp"
              android:background="@color/colorGrey">

        </View>
    </LinearLayout>
</RelativeLayout>