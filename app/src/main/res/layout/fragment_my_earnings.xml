<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/val_14dp"
            android:fillViewport="true"
            android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/my_earnings"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/val_textView_30sp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btnTabCurrentMonth"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/current_month"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"/>

            <Button
                    android:id="@+id/btnTabLifetime"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorLightGrey"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/lifetime"
                    android:textAllCaps="false"
                    android:textColor="@color/colorGrey"/>

        </LinearLayout>

        <TextView
                android:id="@+id/tvTotalEarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/val_8dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorOrange"
                android:textSize="20dp"/>


        <FrameLayout
                android:id="@+id/frameEarningFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
        </FrameLayout>

    </LinearLayout>
</ScrollView>