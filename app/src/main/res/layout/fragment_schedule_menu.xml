<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:fillViewport="true"
            android:scrollbars="none">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <Button
                android:id="@+id/btnBack"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_back"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/val_36dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="@string/add_menu"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/colorOrange"
                    android:textSize="35dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="contd.."
                    android:visibility="gone"
                    android:textColor="@color/colorBrown"/>

        </RelativeLayout>

        <TextView
                android:id="@+id/tvScheduleMenuOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/val_30dp"
                android:text="@string/schedule_menu_on"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/colorOrange"
                android:textSize="15dp"/>


        <LinearLayout
                android:id="@+id/llDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:visibility="visible"
                android:orientation="vertical"
                android:scrollbars="none">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                <LinearLayout
                        android:id="@+id/llMonday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                    <Button
                            android:id="@+id/btnMonday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_round_fill_green"
                            android:text="01"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/colorWhite"
                            android:textSize="22dp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:id="@+id/txt_day1"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Monday"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llTuesday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:orientation="vertical">

                    <Button
                            android:id="@+id/btnTuesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_round_border_grey"
                            android:text="02"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/colorGrey"
                            android:textSize="22dp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:id="@+id/txt_day2"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Tuesday"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llWednesday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                    <Button
                            android:id="@+id/btnWednesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_round_border_grey"
                            android:text="03"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/colorGrey"
                            android:textSize="22dp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:id="@+id/txt_day3"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Wednesday"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llThursday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                    <Button
                            android:id="@+id/btnThursday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_round_border_grey"
                            android:text="04"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/colorGrey"
                            android:textSize="22dp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:id="@+id/txt_day4"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Thursday"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                <LinearLayout
                        android:id="@+id/llFriday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="center"

                        android:orientation="vertical">

                    <Button
                            android:id="@+id/btnFriday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_round_border_grey"
                            android:text="05"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/colorGrey"
                            android:textSize="22dp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Friday"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llSaturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="center"
                        android:orientation="vertical">

                    <Button
                            android:id="@+id/btnSaturday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_round_border_grey"
                            android:text="06"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/colorGrey"
                            android:textSize="22dp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Saturday"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llSunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                    <Button
                            android:id="@+id/btnSunday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_round_border_grey"
                            android:text="07"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/val_textView_22sp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Sunday"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btnLunch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_border_grey"
                    android:text="@string/lunch"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAllCaps="false"
                    android:textColor="@color/colorGrey"
                    android:textSize="22dp"/>

            <Button
                    android:id="@+id/btnDinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/val_4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_border_grey"
                    android:text="@string/dinner"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAllCaps="false"
                    android:textColor="@color/colorGrey"
                    android:textSize="22dp"/>

        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/order_closing_time"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/colorOrange"/>

        <Button
                android:id="@+id/btnTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_round_border_grey"
                android:hint="@string/schedule_time"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/colorDarkGrey"/>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/meal_serving_time"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/colorOrange"/>

        <Button
                android:id="@+id/btnMealServeTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_round_border_grey"
                android:hint="@string/schedule_time"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/colorDarkGrey"/>

        <Button
                android:id="@+id/btnSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/bg_round_fill_orange"
                android:text="@string/schedule"
                android:fontFamily="@font/montserrat_regular"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"/>

        <Button
                android:id="@+id/btnPublishNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/bg_round_fill_orange"
                android:text="@string/publish_now"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/white"
                android:visibility="gone"/>

    </LinearLayout>
</ScrollView>