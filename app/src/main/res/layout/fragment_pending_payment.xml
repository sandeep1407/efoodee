<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.TabsFragment.PendingPaymentFragment">

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:scrollbars="none"
            android:visibility="visible"
            tools:listitem="@layout/listitem_myorders"
            android:id="@+id/recyclerView_my_payments"
    />

    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
              android:text="@string/no_record_found"
              android:textSize="@dimen/val_textView_24sp"
              android:fontFamily="@font/montserrat_semibold"
              android:layout_gravity="center"
              android:gravity="center"
              android:visibility="gone"
              android:padding="@dimen/val_6dp"
              android:id="@+id/txt_no_records"/>

</FrameLayout>