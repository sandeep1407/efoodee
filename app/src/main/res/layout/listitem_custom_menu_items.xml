<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_alignParentLeft="true">

            <ImageButton
                    android:id="@+id/ivRemoveItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_fill_grey"
                    android:padding="@dimen/val_8dp"
                    app:srcCompat="@drawable/ic_close"/>


            <TextView
                    android:id="@+id/tvMenuItem"
                    android:text="Chapati"
                    android:layout_marginLeft="@dimen/val_12dp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/val_8dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text_color"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentRight="true">


            <ImageButton
                    android:id="@+id/ivRemoveQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/val_8dp"
                    android:background="@drawable/bg_round_fill_grey"
                    app:srcCompat="@drawable/ic_remove"/>

            <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_border_grey"
                    android:paddingLeft="25dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:paddingRight="25dp"
                    android:textColor="@color/text_color"
                    android:paddingTop="2dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingBottom="2dp"
                    android:text="1"
                    android:textSize="@dimen/val_textView_16sp"
            />

            <ImageButton
                    android:id="@+id/ivAddQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/val_8dp"
                    android:background="@drawable/bg_round_fill_grey"
                    app:srcCompat="@drawable/ic_add"/>

        </LinearLayout>


    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorLightGrey"
    />
</LinearLayout>