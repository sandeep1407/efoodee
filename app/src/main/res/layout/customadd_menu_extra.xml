<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/custom_layout_extra"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:padding="5dp">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_round_border_grey"
            android:gravity="center"
            android:padding="5dp">

        <LinearLayout
                android:id="@+id/llMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="2"
                android:gravity="center">

            <ImageView
                    android:id="@+id/ivCancelItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_fill_grey"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_close"/>

            <EditText
                    android:id="@+id/tvItemExtra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/val_12dp"
                    android:background="@android:color/transparent"
                    android:hint="Add item"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:maxLength="20"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="16sp"/>


        </LinearLayout>

        <Button
                android:id="@+id/btnSaveExtra"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_round_fill_grey"
                android:text="@string/save"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#000"
                android:textSize="@dimen/val_textView_12sp"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="right|center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RS"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginRight="@dimen/val_8dp"
                android:textSize="20sp"/>

        <EditText
                android:id="@+id/etRupeesExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_light_grey"
                android:padding="@dimen/val_8dp"
                android:inputType="number"
                android:text="10"
                android:fontFamily="@font/montserrat_regular"
                android:maxLength="4"
                android:textColor="@color/text_color"
                android:textSize="16sp"/>

    </LinearLayout>
</LinearLayout>