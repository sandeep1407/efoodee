<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="@dimen/val_6dp"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_default"
                android:id="@+id/imageViewProfile"
        />

        <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content" android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="@dimen/val_6dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Kavya Kumari"
                    android:maxLength="20"
                    android:layout_marginLeft="@dimen/val_10dp"
                    android:singleLine="true"
                    android:id="@+id/txt_user_name"
                    android:textColor="@color/colorBrown"
                    android:textSize="14sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="@dimen/val_10dp"
                    android:layout_marginRight="@dimen/val_6dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Marathi Kohlapuri Expertise"
                    android:maxLength="30"
                    android:id="@+id/txt_passion"
                    android:textColor="@color/colorBrown"
                    android:textSize="14sp"/>


        </LinearLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="02/03.2019 3.12PM"
                android:id="@+id/txt_dateTime"
                android:textColor="@color/gray"
                android:textSize="12sp"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3"
                android:layout_weight="1"
                android:stepSize="1.0"
                android:padding="@dimen/val_2dp"
                android:layout_gravity="center"
                style="?android:attr/ratingBarStyleSmall"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="OrderNo.123456"
                android:padding="@dimen/val_2dp"
                android:id="@+id/txt_order_no"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/val_14dp"
                android:gravity="right"
                android:textColor="@color/gray"
                android:textSize="12sp"/>

    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/dummy_myma_medium_length"
            android:padding="@dimen/val_2dp"
            android:id="@+id/txt_review_"
            android:layout_marginLeft="@dimen/val_16dp"
            android:maxLength="150"
            android:layout_marginRight="@dimen/val_14dp"
            android:textColor="@color/gray"
            android:textSize="14sp"/>

    <View
            android:layout_width="match_parent" android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/val_14dp"
            android:layout_marginRight="@dimen/val_14dp"
            android:layout_marginTop="@dimen/val_4dp"
            android:background="@color/light_grey">

    </View>

</LinearLayout>