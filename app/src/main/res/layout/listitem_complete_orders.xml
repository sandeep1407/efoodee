<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/val_4dp"
                        android:id="@+id/txt_user_name"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Test Singh"
                        android:textSize="@dimen/val_textView_14sp"/>
                <TextView
                        android:id="@+id/txt_dateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="1/02/1582 3.12 pm"
                        android:layout_marginTop="2dp"
                        android:padding="@dimen/val_4dp"
                        android:layout_marginBottom="@dimen/val_6dp"
                        android:textSize="@dimen/val_textView_12sp"/>
            </LinearLayout>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_border_grey"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:paddingBottom="10dp"
                    android:layout_margin="@dimen/val_10dp"
                    android:text="Ask for Review"
                    android:id="@+id/btnAskForReview"
                    android:textColor="@color/colorGrey"
                    android:textSize="14sp"/>
        </LinearLayout>


        <View android:layout_width="match_parent" android:layout_height="0.5dp"
              android:background="@color/colorGrey">

        </View>
    </LinearLayout>
</RelativeLayout>