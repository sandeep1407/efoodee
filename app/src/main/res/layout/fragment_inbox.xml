<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/val_14dp"
            android:fillViewport="true"
            android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/inbox"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/val_textView_30sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btnTabNotification"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/notification"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />

            <Button
                    android:id="@+id/btnTabMessage"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorLightGrey"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/message"
                    android:textAllCaps="false"
                    android:textColor="@color/colorGrey" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView

                android:id="@+id/rvInbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
        />

        <TextView
                android:id="@+id/tvAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/val_12dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="end"
                android:text="R.469"
                android:textAllCaps="false" />

        <Button
                android:id="@+id/btnDeliveryOnTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginTop="@dimen/val_8dp"
                android:background="@drawable/bg_round_fill_light_grey"
                android:fontFamily="@font/montserrat_medium"
                android:text="Delivery .23 km away"
                android:textAllCaps="false" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btnAccept"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp40"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_fill_green"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/accept"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />

            <Button
                    android:id="@+id/btnReject"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp40"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_fill_orange"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/reject"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />

        </LinearLayout>

        <TextView
                android:id="@+id/tvDeliveryTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/val_8dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Decide in next 1.23 seconds" />

    </LinearLayout>
</ScrollView>